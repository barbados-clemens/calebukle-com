---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, publish_date, author, tags } = post.data;

// Calculate reading time (rough estimate: 200 words per minute)
const wordCount = post.body.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);

// Format date
const formattedDate = new Date(publish_date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} - Caleb Ukle`} description={description}>
  <article class="blog-post">
    <header class="post-header">
      <h1>{title}</h1>
      <div class="post-meta">
        <time datetime={publish_date.toISOString()}>{formattedDate}</time>
        <span class="separator">•</span>
        <span>{readingTime} min read</span>
        {author && (
          <>
            <span class="separator">•</span>
            <span>{author}</span>
          </>
        )}
      </div>
      {tags && tags.length > 0 && (
        <div class="post-tags">
          {tags.map(tag => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      )}
    </header>

    <div class="post-content">
      <slot />
    </div>

      <a href="/" class="back-link">← Back to all posts</a>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 100%;
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border);
  }

  .post-header h1 {
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .post-meta {
    font-size: 0.875rem;
    color: #666;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .separator {
    color: #ccc;
  }

  .post-tags {
    margin-top: 0.75rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    padding: 0.25rem 0.5rem;
    background: #000;
    color: #fff;
    border: 1px solid #000;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
  }

  .tag:hover {
    background: #fff;
    color: #000;
  }

  .post-content {
    margin-bottom: 3rem;
  }

  /* Blog-specific content overrides */
  .post-content :global(img) {
    margin: 2rem auto;
    display: block;
  }


  .back-link {
    font-weight: 500;
    text-decoration: none;
    color: var(--color-text);
  }

  .back-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .post-meta {
      font-size: 0.8rem;
    }

    .post-header {
      margin-bottom: 1.5rem;
    }
  }
</style>
