---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <section class="error-page">
    <h1>404</h1>
    <p>Page not found</p>
    <a href="/" class="home-link">‚Üê Go home</a>
  </section>
</BaseLayout>

<style>
  .error-page {
    text-align: center;
    padding: 4rem 0;
  }

  .error-page h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .error-page p {
    font-size: 1.5rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .home-link {
    display: inline-block;
    font-size: 1.125rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--color-text);
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--color-border);
    transition: all 0.2s;
  }

  .home-link:hover {
    background: var(--color-text);
    color: var(--color-bg);
  }

  @media (max-width: 640px) {
    .error-page h1 {
      font-size: 3rem;
    }

    .error-page p {
      font-size: 1.25rem;
    }
  }
</style>
